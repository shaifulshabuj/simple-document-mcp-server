# MCP Server Configuration
# This file configures the Simple Document MCP Server

# Server Configuration
MCP_SERVER_NAME="simple-document-server"
MCP_SERVER_VERSION="1.0.0"
MCP_SERVER_COMMAND="python simple_mcp_server.py"

# Default Settings
DEFAULT_DOCUMENTS_DIR="./documents"
DEFAULT_LOG_LEVEL="INFO"

# Environment Variables
export PYTHONPATH="${PYTHONPATH}:."
export MCP_SIMPLE_DOC_SERVER_DIR="${DEFAULT_DOCUMENTS_DIR}"
export MCP_SIMPLE_DOC_SERVER_LOG_LEVEL="${DEFAULT_LOG_LEVEL}"